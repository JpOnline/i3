# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym $mod+h resize shrink width 10 px or 10 ppt
        bindsym $mod+j resize grow height 10 px or 10 ppt
        bindsym $mod+k resize shrink height 10 px or 10 ppt
        bindsym $mod+l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        # bindsym Left resize shrink width 10 px or 10 ppt
        # bindsym Down resize grow height 10 px or 10 ppt
        # bindsym Up resize shrink height 10 px or 10 ppt
        # bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

mode "extra command" {
        # Open chrome
        bindsym $mod+g exec google-chrome; mode "default"

        bindsym $mod+w exec wifi toggle; mode "default"

        # switch to workspace
        bindsym $mod+1 workspace number 110; mode "default"
        bindsym $mod+2 workspace number 120; mode "default"
        bindsym $mod+3 workspace number 130; mode "default"
        bindsym $mod+4 workspace number 140; mode "default"
        bindsym $mod+5 workspace number 150; mode "default"
        bindsym $mod+6 workspace number 160; mode "default"
        bindsym $mod+7 workspace number 170; mode "default"
        bindsym $mod+8 workspace number 180; mode "default"
        bindsym $mod+9 workspace number 190; mode "default"
        bindsym $mod+0 workspace number "200 AFK"; mode "default"

        # move focused container to workspace
        bindsym $mod+Shift+1 move container to workspace number 110; mode "default"
        bindsym $mod+Shift+2 move container to workspace number 120; mode "default"
        bindsym $mod+Shift+3 move container to workspace number 130; mode "default"
        bindsym $mod+Shift+4 move container to workspace number 140; mode "default"
        bindsym $mod+Shift+5 move container to workspace number 150; mode "default"
        bindsym $mod+Shift+6 move container to workspace number 160; mode "default"
        bindsym $mod+Shift+7 move container to workspace number 170; mode "default"
        bindsym $mod+Shift+8 move container to workspace number 180; mode "default"
        bindsym $mod+Shift+9 move container to workspace number 190; mode "default"
        bindsym $mod+Shift+0 move container to workspace number 200; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+g mode "default"

        # Sleep
        # bindsym $mod+k exec systemctl suspend

        # move entire workspace to another monitor
        bindsym $mod+y move workspace to output left; mode "default"
        bindsym $mod+o move workspace to output right; mode "default"
        bindsym $mod+u move workspace to output down; mode "default"

        # invert colors
        bindsym $mod+i exec xcalib -invert -alter; mode "default"

        bindsym $mod+k exec ~/light-level.sh 50%+
        bindsym $mod+j exec ~/light-level.sh 50%-

        # Timestamp in discord format copied in the clipboard, use with a date as 2024-12-06T10:14 or simply 10:14
        # To create discord-timestamp.sh, run the following in the terminal: printf $'#!/bin/bash\n\ndate --date="$1" +"<t:%%s:t>" | tr -d \'\\\\n\' | xclip -selection c' > ~/d.sh && sudo chmod +x ~/d.sh
        bindsym $mod+d exec i3-input -F 'exec ~/discord-timestamp.sh %s' -P 'Discord Time ';mode "default"

        bindsym $mod+space floating toggle

        bindsym $mod+l exec ~/lock-screen.sh;mode "default"

        # next song
        bindsym $mod+p exec "playerctl next"; mode "default"
}

bindsym $mod+r mode "resize"
bindsym $mod+g mode "extra command"

