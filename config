bindsym $mod+9 workspace number "90 Notes"
bindsym $mod+0 workspace number "100 Outra Coisa"
# bindsym $mod+p workspace number 11

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 10
bindsym $mod+Shift+2 move container to workspace number 20
