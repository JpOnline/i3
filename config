# Next/prev workspace
bindsym $mod+n exec --no-startup-id ~/.config/i3/next-workspace.sh workspace next
bindsym $mod+Shift+n exec --no-startup-id ~/.config/i3/next-workspace.sh move container to workspace next
bindsym $mod+p workspace prev
bindsym $mod+Shift+p move container to workspace prev; workspace prev

